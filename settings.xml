<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_upd_icon_container"
            android:layout_below="@id/text_view_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Update Personal Details Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/update_personal_details"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_upd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_settings_title"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/card_view_upd_icon_container"
            android:fontFamily="sans-serif"
            android:text="Update Personal Details"
            android:textColor="@color/independence"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_change_password_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_below="@id/card_view_upd_icon_container"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Change Password Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/change_password"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card_view_change_password_icon_container"
            android:layout_below="@id/card_view_upd_icon_container"
            android:fontFamily="sans-serif"
            android:text="Change Password"
            android:textColor="@color/independence"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_change_language_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_below="@id/card_view_change_password_icon_container"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Change Language Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/change_language"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card_view_change_language_icon_container"
            android:layout_below="@id/card_view_change_password_icon_container"
            android:fontFamily="sans-serif"
            android:text="Change Language"
            android:textColor="@color/independence"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_helpdesk_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_below="@id/card_view_change_language_icon_container"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Helpdesk Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/heldesk"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_helpdesk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card_view_helpdesk_icon_container"
            android:layout_below="@id/card_view_change_language_icon_container"
            android:fontFamily="sans-serif"
            android:text="Helpdesk"
            android:textColor="@color/independence"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_privacy_policy_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_below="@id/card_view_helpdesk_icon_container"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Privacy Policy Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/privacy_policy"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card_view_privacy_policy_icon_container"
            android:layout_below="@id/card_view_helpdesk_icon_container"
            android:fontFamily="sans-serif"
            android:text="Privacy Policy"
            android:textColor="@color/independence"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_logout_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_below="@id/card_view_privacy_policy_icon_container"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Logout Icon"
                android:scaleType="centerCrop"
                android:src="@drawable/logout"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card_view_logout_icon_container"
            android:layout_below="@id/card_view_privacy_policy_icon_container"
            android:fontFamily="sans-serif"
            android:text="Logout"
            android:textColor="@color/independence"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
