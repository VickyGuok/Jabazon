<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12sp">

        <TextView
            android:id="@+id/text_view_record_hc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:text="Record Healthcare Centre"
            android:textColor="@color/independence"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_centreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Centre Name"
            android:textColor="@color/independence"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_record_hc_title"/>

        <EditText
            android:id="@+id/edit_text_centreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="centre name"
            android:ems="30"
            android:hint="Enter Centre Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/independence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_centreName"/>

        <TextView
            android:id="@+id/text_view_centre_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Centre Address"
            android:textColor="@color/independence"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_centreName"/>

        <EditText
            android:id="@+id/edit_text_centre_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="centre address"
            android:ems="30"
            android:hint="Enter Centre Address"
            android:inputType="textMultiLine"
            android:lines="5"
            android:minLines="3"
            android:gravity="top|start"
            android:minHeight="48dp"
            android:textColor="@color/independence"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_centre_address"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_btn_add_hc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Record Healthcare Centre"
            android:paddingTop="12dp"
            android:src="@drawable/btn_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_centre_address"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
