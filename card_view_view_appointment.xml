<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_vaccination_list_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="0dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:id="@+id/jab_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="ID image"
                android:scaleType="centerCrop"
                android:src="@drawable/id_image"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_vaccine_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cv_vaccination_list_container"
            android:layout_toEndOf="@id/cv_vaccination_list_container"
            android:text="Patient Vaccination ID"
            android:layout_marginTop="25dp"
            android:textColor="@color/independence"
            android:textSize="18sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
