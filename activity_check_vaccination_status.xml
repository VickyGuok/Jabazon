<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_vaccinationStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".checkVaccinationStatus">

    <TextView
        android:id="@+id/text_view_requestVaccinationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Vaccination Request "
        android:textAlignment="center"
        android:textColor="@color/independence"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/layout_vaccinationBatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_requestVaccinationTitle"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_vaccinationBatchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="Batch No"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/vaccination_batchNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batch No" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_vaccine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_vaccinationBatch"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_vaccinationVaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="Vaccine"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/vaccination_vaccine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vaccine" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_healthcare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_vaccine"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_vaccinationHealthcare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-black"
            android:text="Healthcare"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/vaccination_healthcare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Healthcare" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_healthcare"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_vaccinationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-black"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/vaccination_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Status" />

    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_status"
        android:layout_centerInParent="true"
        android:text="OK" />

</RelativeLayout>
